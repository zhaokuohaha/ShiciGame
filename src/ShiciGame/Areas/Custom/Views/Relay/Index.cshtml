@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	Layout = "~/Views/Shared/_AnimateBgLayout.cshtml";
	ViewData["Title"] = "接龙";
}
@section scripts{
	@*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
	<script src="~/areas/relay/relayindex.js"></script>
}
@section styles{
	<environment names="Development">
		<link href="~/css/mobi.css" rel="stylesheet" />
		<link rel="stylesheet" href="~/areas/relay/realyindex.css" />
	</environment>
	<environment names="Staging,Production">
		<link rel="stylesheet" href="~/css/mobi.min.css" />
		<link rel="stylesheet" href="~/areas/relay/realyindex.css" />
	</environment>
}

<div class="flex-center">
